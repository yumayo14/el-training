= form_for task, html: {class: 'task_form'} do |f|
  - if task.errors.any?
    .error_announce
      - task.errors.full_messages.each do |error_message|
        p = error_message
  .title_block
    = f.label :title
    = f.text_field :title, placeholder: "タイトル"
  .importance_block
    = f.label :importance
    = f.select :importance, Task.importances.keys.to_a, {}
  .dead_line_on_block
    = f.label :dead_line_on
    = f.date_select :dead_line_on
  .status_block
    = f.label :status
    = f.select :status, Task.statuses.keys.to_a, {}
  .detail_block
    = f.label :detail
    = f.text_area :detail, placeholder: "説明文"
  .submit_block
    = f.submit "新しいタスクを追加"
